#!/bin/sh
# PPPoE拨号在线接口数检测及重拨脚本
# Copyright (C) 2015-2016 GuoGuo<gch981213@gmail.com>
# Copyright (C) 2017 Xingwang Liao<kuoruan@gmail.com>

. /lib/functions.sh

[ -f /etc/config/syncdial ] || return 1

# 操作配置
# 参数 $1 配置项
ifs_opt_down() {
	local ifn=$1
	local ifprefix=${ifn:0:4}

	[ "$ifprefix" = "vwan" ] || return
	ifdown $ifn
}

ifs_opt_up() {
	local ifn=$1
	local ifprefix=${ifn:0:4}

	[ "$ifprefix" = "vwan" ] || return
	ifup $ifn
}

config_load "syncdial"
config_get_bool dialchk 'general' 'dialchk' '0'
config_get_bool old_frame 'general' 'old_frame' '0'
config_get dial 'general' 'dialnum'
config_get dialwait 'general' 'dialwait' '20'

if [ ."$dialchk" = ."0" ]; then
	echo "dial check disabled."
	return 0
fi
[ $(ps | grep -c "pppconnectcheck") -gt 3 ] && {
	logger -t PPPoE-IFChecker "Another checker is running.exit."
	return 1
}
sleep 5
PPPUPNUM=$(mwan3 status | grep -c 'is online and tracking is active')
logger -t PPPoE-IFChecker "$PPPUPNUM interfaces are online."
if [ "$PPPUPNUM" -lt $dial ]; then
	logger -t PPPoE-IFChecker "Stop interfaces."
	[ ."$old_frame" = ."0" ] && ifdown wan
	config_load "network"
	config_foreach ifs_opt_down "interface"
	sleep $dialwait
	logger -t PPPoE-IFChecker "Start interfaces."
	config_foreach ifs_opt_up "interface"
	[ ."$old_frame" = ."0" ] && ifup wan
	logger -t PPPoE-IFChecker "Interfaces restarted."
	logger -t PPPoE-IFChecker "Another checker will be started 60s later."
	sleep 60 && pppconnectcheck &
else
	logger -t PPPoE-IFChecker "Nothing to do.Exit."
fi
return 0
